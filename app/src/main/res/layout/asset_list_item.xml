<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="50dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tv_coin_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:text="원화"/>

            <TextView
                android:id="@+id/tv_ready"
                android:layout_width="52dp"
                android:layout_height="22dp"
                android:gravity="center"
                android:layout_below="@+id/tv_coin_name"
                android:layout_centerHorizontal="true"
                android:background="@drawable/round_1dp"
                android:textSize="12dp"
                android:text="준비중"
                android:visibility="visible"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/btn_arrow">

            <TextView
                android:id="@+id/tv_own_cnt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:text="961,444"/>

            <TextView
                android:id="@+id/tv_price_krw"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_own_cnt"
                android:layout_alignParentRight="true"
                android:textColor="@color/black_50"
                android:textSize="15dp"
                android:text="0 KRW"/>

        </RelativeLayout>

        <ImageView
            android:id="@+id/btn_arrow"
            android:layout_width="30dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/btn_arrow"/>

    </RelativeLayout>

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:background="@color/line"/>

</RelativeLayout>